<style>
  .map-container {
    margin-top: 9vh; /* Adjust as needed */
    border-radius: 10rem;
    /* overflow: hidden; */
  }
</style>

<% layout("/layouts/boilerplate.ejs") %>
<script>
  const maptilerApiKey = '<%- process.env.MAPTILER_API_KEY %>';
  const listing = <%- JSON.stringify(listing) %>
</script>
<!-- <div id="map" style="height: 400px;""></div> -->
  <div class="row">
    <div class="card col-6 mt-1 listing-card">
      <h2>
        <%=listing.title%>
      </h2>
      <i>- <%=listing.owner.username%></i><br>
      <img src="<%=listing.image.url%>" class="card-img-top show-img" alt="listing_image">
      <div class="card-body">
        <div class="card-text">
          <ul>
            <li>
              <%=listing.description%>
            </li>
            <li>&#8377 <%=listing.price.toLocaleString("en-IN")%></li>
            <li>
              <%=listing.location%>
            </li>
            <li>
              <%=listing.country%>
            </li>
          </ul>
        </div>
      </div>
    </div>
    <div class="container col-md-6 map-container">
      <h5>Where you'll be</h5>
      <div id="map" style="height: 450px;"></div>
    </div>
    
    <% if(currUser && currUser._id.equals(listing.owner._id)) { %>
      <div class="changeBtns col-6 mb-3">
        <form action="/listings/<%=listing._id%>/edit">
          <button class="btn btn-dark btn-lg editbtn"><i class="fa-solid fa-pen-to-square"></i></button>
        </form>

        <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
          <button class="btn btn-dark btn-lg"><i class="fa-solid fa-trash"></i></button>
        </form>
      </div>
      <%}%>

        <% if(currUser) { %>
          <hr>
          <div class="col-6 offset-3 mt-2 mb-2">
            <h4>Leave a Review!</h4>
            <form class="needs-validation" action="/listings/<%=listing._id%>/reviews" method="POST" novalidate>
              <div>
                <label for="rating" class="form-label">Rating</label>
                <fieldset class="starability-slot">
                  <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                  <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                  <label for="first-rate1" title="Terrible">1 star</label>
                  <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                  <label for="first-rate2" title="Not good">2 stars</label>
                  <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                  <label for="first-rate3" title="Average">3 stars</label>
                  <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                  <label for="first-rate4" title="Very good">4 stars</label>
                  <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                  <label for="first-rate5" title="Amazing">5 stars</label>
                </fieldset>
              </div>
              
              <div>
                <label for="comment" class="form-label">Comment</label>
                <textarea class="form-control" id="comment" name="review[comment]" cols="10" rows="5"
                  required></textarea>
                <div class="invalid-feedback">Add Comments for the review</div>
              </div>
              <div class="mt-2">
                <button class="btn btn-lg cmtBtn"><i class="fa-regular fa-comments"></i></button>
              </div>
            </form>
          </div>
          <% } %>
            <% if(listing.reviews && listing.reviews.length){ %>
              <hr>
              <div class="col-6 offset-3 mt-2 mb-2">
                <h4>Reviews!</h4>
                <div class="row">
                  <% for(let r of listing.reviews){ %>
                    <div class="col-6 mt-1 mb-1">
                      <div class="card review-card">
                        <div class="card-body">
                          <h5 class="card-title">@<%=r.author.username%></h5>
                          <p class="starability-result card-text" data-rating="<%=r.rating%>"></p>
                          <p class="card-text">
                            <%=r.comment%>
                          </p>
                        </div>
                      </div>
                      <!-- some issue with below if i think -->
                      <% if(currUser && currUser._id.equals(r.author._id)) { %> 
                      <form action="/listings/<%=listing._id%>/reviews/<%=r._id%>?_method=DELETE" method="POST"
                        class="mb-3">
                        <button class="btn btn-sm btn-dark"><i class="fa-solid fa-trash"></i></button>
                      </form>
                      <% } %>
                    </div>
                    <% } %>
                </div>
              </div>
              <% } %>
  </div>

  <script src="/js/showPageMap.js"></script>

  